    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var relatoriosLink = document.getElementById("relatorios-link");
            var relatoriosPopup = document.getElementById("relatorios-popup");
            var formulario = document.querySelector("form");

            relatoriosLink.addEventListener("click", function(event) {
                event.preventDefault();
                relatoriosPopup.style.display = "block";
            });

            formulario.addEventListener("submit", function(event) {
                event.preventDefault();

                // Obtenha os valores dos campos do formulário
                var modelo = document.getElementById("modelo").value;
                var objeto = document.getElementById("objeto").value;
                var funcao = document.getElementById("funcao").value;
                var motoristaAjudante = document.getElementById("motorista_ajudante").value;
                var dataInicial = document.getElementById("data_inicial").value;
                var dataFinal = document.getElementById("data_final").value;

                // Crie um objeto de dados a ser enviado via POST
                var data = {
                    modelo: modelo,
                    objeto: objeto,
                    funcao: funcao,
                    motorista_ajudante: motoristaAjudante,
                    data_inicial: dataInicial,
                    data_final: dataFinal
                };

           // ...

           fetch(formulario.action, {
               method: "POST",
               body: JSON.stringify(data),
               headers: {
                   "Content-Type": "application/json"
               }
           })
           .then(response => {
               return response.blob();
           })
           .then(blob => {
               // Crie um URL temporário para o Blob
               var url = window.URL.createObjectURL(blob);

               // Crie um elemento de âncora para permitir o download
               var a = document.createElement("a");
               a.href = url;
               a.target = "_blank"; // Abre em uma nova guia/janela
               a.style.display = "none";
               document.body.appendChild(a);

               // Inicie o download e, em seguida, remova o elemento de âncora
               a.click();
               window.URL.revokeObjectURL(url);
           })
           .catch(error => {
               console.error("Erro na solicitação POST: " + error);
           });

            fecharPopupInterno.addEventListener("click", function() {
                relatoriosPopup.style.display = "none";
            });

            fecharPopupExterno.addEventListener("click", function() {
                relatoriosPopup.style.display = "none";
            });
        });
    </script>

